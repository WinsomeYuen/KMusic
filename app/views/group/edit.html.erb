<% content_for :head do %>
<h1>KMusic Group Info System</h1>
<% end %>

<h1>Edit Group Detail</h1>

<%= form_for @group, :url =>{:action => "update", :id =>@group} do |f| %>

<p>Name: <%= f.text_field 'name' %></p>
<p>Debut: <%= f.number_field  'debut' %></p>
<p>Labels: <%= f.text_field  'labels' %></p>
<p>Members: <%= f.text_field  'members' %></p>
<p>Genre: <%= f.collection_select :genre_id, Genre.all, :id, :name %></p>
<p>Description<br/>

<%= f.text_area 'description' %></p>
<%= f.submit "Save changes" %>
<% end %>

<%= link_to 'Back', {:action => 'list' } %>