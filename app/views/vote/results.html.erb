<% content_for :head do %>
<h1><%= @title %></h1>
<% end %>

<table class='results'>
  <tr><th>Group</th><th>Votes</th></tr>
  <% $Choices.each do |id, text| %>
    <tr>
      <td><%= text %></td>
      <td><%= @votes[id] || 0 %></td>
    </tr>
  <% end %>
</table>
<br>
<button type='submit' class='button'><a href ="/vote/votes" style='color:white'>Return to Voting</a></button>
